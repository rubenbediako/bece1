          </Typography>
        ) : (
          <Grid container spacing={3}>
            {topicQuestions.map((question, index) => (
              <Grid item xs={12} key={question.id}>
                <motion.div
                  whileHover={{ scale: 1.01 }}
                  whileTap={{ scale: 0.99 }}
                >
                  <Card 
                    sx={{ 
                      cursor: 'pointer',
                      transition: 'all 0.3s ease',
                      '&:hover': {
                        boxShadow: 4,
                        bgcolor: 'info.main',
                        color: 'white',
                        '& .MuiChip-root': {
                          bgcolor: 'white',
                          color: 'info.main'
                        }
